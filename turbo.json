{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["DISABLE_EXTRACTION", "NODE_ENV", "EAS_BUILD_PLATFORM"],
  "pipeline": {
    "build": {
      "cache": false,
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "build/**",
        "dist/**",
        "api/**",
        "public/build/**",
        "node_modules/.cache/metro/**"
      ]
    },
    "watch": {
      "cache": false
    },
    "check-types": {
      "cache": false
    },
    "start": {
      "cache": false
    }
  }
}
